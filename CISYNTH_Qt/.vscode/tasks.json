{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "qmake",
            "type": "shell",
            "command": "which qmake > /dev/null && qmake || ([ -f /usr/local/opt/qt@5/bin/qmake ] && /usr/local/opt/qt@5/bin/qmake || ([ -f /usr/local/opt/qt5/bin/qmake ] && /usr/local/opt/qt5/bin/qmake || ([ -f /opt/homebrew/opt/qt@5/bin/qmake ] && /opt/homebrew/opt/qt@5/bin/qmake || /opt/homebrew/opt/qt5/bin/qmake)))",
            "args": [
                "-spec",
                "macx-clang",
                "CONFIG+=debug",
                "CONFIG+=qml_debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": [
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "dependsOn": [
                "qmake"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "echo",
            "args": [
                "Build completed!"
            ],
            "dependsOn": [
                "make"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Generate compile_commands.json",
            "type": "shell",
            "command": "bear",
            "args": [
                "--",
                "make"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "dependsOn": [
                "qmake"
            ]
        }
    ]
}
